<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/complaintTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complaint Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#7B1FA2" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="14sp"
        android:textColor="#7B1FA2"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/complaintDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description of the complaint"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:textColor="#000000" />



    <ImageView
        android:id="@+id/complaintMedia"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:background="#E0E0E0" />


    <TextView
        android:id="@+id/userDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Details"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satus: Pending"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <!-- Horizontal ProgressBar for Pending Status -->
    <ProgressBar
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="30"
        android:max="100"
        android:progressDrawable="@android:drawable/progress_horizontal"
        android:layout_marginTop="8dp"/>



    <!-- Feedback Text -->
    <TextView
        android:id="@+id/assignmentFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

</LinearLayout>